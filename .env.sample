DATABASE_URL=postgresql+psycopg2://repoops:repoops@db:5432/repoops

OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5-mini

WORKSPACE_ROOT=/workspaces
LEXICAL_PRIMARY=zoekt
EXEC_ALLOWLIST=pnpm,npm,yarn,pytest,python,ruff,uv,poetry,make,git
ZOEK_URL=http://localhost:6070
ZOEK_INDEX_PATHS=/workspaces
ZOEK_INDEX_INTERVAL=60
ZOEK_INDEX_ARGS=
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=your_langsmith_project_name_here

# RAG tuning for higher precision
RAG_FILTER_LANGS=ts,tsx,js,jsx
RAG_MAX_FILES=4
RAG_RERANK=1
RAG_RERANK_ON_AMBIGUITY=1
